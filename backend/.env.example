# Backend Environment Variables
# Copy this file to .env and update the values

# MongoDB Connection
# Get a free MongoDB Atlas cluster at https://www.mongodb.com/cloud/atlas
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/scamcap?retryWrites=true&w=majority

# JWT Secret Key (generate a strong random key for production)
JWT_SECRET_KEY=your-super-secret-key-change-in-production-use-strong-random-string

# Environment
ENVIRONMENT=production

# Optional: Twilio for MFA/SMS
# Get credentials at https://www.twilio.com/
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Risk Thresholds (optional - defaults provided)
PHISHING_THRESHOLD=0.7
DEEPFAKE_THRESHOLD=0.8
MFA_TRIGGER_THRESHOLD=0.9

# Debug Mode (set to true for development)
DEBUG=false
