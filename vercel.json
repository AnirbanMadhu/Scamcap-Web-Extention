{
  "rewrites": [
    { "source": "/api/v1/(.*)", "destination": "/backend/api/index.py" },
    { "source": "/status", "destination": "/backend/api/index.py" },
    { "source": "/docs", "destination": "/backend/api/index.py" },
    { "source": "/redoc", "destination": "/backend/api/index.py" },
    { "source": "/openapi.json", "destination": "/backend/api/index.py" },
    { "source": "/health", "destination": "/backend/api/index.py" },
    { "source": "/(.*)", "destination": "/backend/api/index.py" }
  ],
  "functions": {
    "backend/api/index.py": {
      "maxDuration": 10,
      "memory": 1024
    }
  },
  "env": {
    "PYTHONUNBUFFERED": "1"
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, PUT, DELETE, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type, Authorization" }
      ]
    }
  ]
}
