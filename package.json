{
  "name": "scamcap-extension",
  "version": "1.0.0",
  "description": "AI-powered browser extension for phishing and deepfake protection",
  "main": "backend/extension/manifest.json",
  "scripts": {
    "test": "jest tests/test_extension.js",
    "test:watch": "jest tests/test_extension.js --watch",
    "test:coverage": "jest tests/test_extension.js --coverage",
    "lint": "eslint backend/extension/ tests/",
    "lint:fix": "eslint backend/extension/ tests/ --fix",
    "build": "npm run lint && npm run test",
    "dev": "web-ext run --source-dir=backend/extension/",
    "package": "web-ext build --source-dir=backend/extension/ --artifacts-dir=dist/"
  },
  "keywords": [
    "chrome-extension",
    "security",
    "phishing",
    "deepfake",
    "ai",
    "machine-learning",
    "cybersecurity"
  ],
  "author": "ScamCap Team",
  "license": "MIT",
  "devDependencies": {
    "jest": "^29.5.0",
    "eslint": "^8.42.0",
    "web-ext": "^7.6.2",
    "@types/chrome": "^0.0.237",
    "jest-environment-jsdom": "^29.5.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFiles": ["<rootDir>/tests/setup.js"],
    "collectCoverageFrom": [
      "backend/extension/**/*.js",
      "!backend/extension/vendor/**",
      "!backend/extension/node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "webextensions": true,
      "jest": true
    },
    "extends": ["eslint:recommended"],
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "globals": {
      "chrome": "readonly"
    },
    "rules": {
      "no-unused-vars": "warn",
      "no-console": "warn",
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/scamcap-extension.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/scamcap-extension/issues"
  },
  "homepage": "https://scamcap.com"
}
